<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="fill_parent"
  	android:id="@+id/root_route_details" android:layout_height="wrap_content">
	<LinearLayout
	  	xmlns:android="http://schemas.android.com/apk/res/android"
	  	android:orientation="vertical"
	  	android:layout_width="match_parent"
	  	android:layout_height="match_parent">
	  	<TableLayout 
	  		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
	  		android:stretchColumns="1">
	  		<TableRow>
	  			<TextView 
	  				android:layout_column="1"
	  				android:text="@string/track_name"/>
	  			<TextView 
	  				android:id="@+id/track_name_string"/>
	  		</TableRow>
	  		<TableRow>
	  			<TextView 
	  				android:layout_column="1"
	  				android:text="@string/track_duration"/>
	  			<TextView 
	  				android:id="@+id/duration_time"/>
	  		</TableRow>
	  		<TableRow>
	  			<TextView 
	  				android:layout_column="1"
	  				android:text="@string/track_distance"/>
	  			<TextView 
	  				android:id="@+id/distance_km"/>
	  		</TableRow>
	  		<TableRow>
	  			<TextView 
	  				android:layout_column="1"
	  				android:text="@string/track_average_speed"/>
	  			<TextView 
	  				android:id="@+id/avg_speed"/>
	  		</TableRow>
	  		<TableRow>
	  			<TextView 
	  				android:layout_column="1"
	  				android:text="@string/track_top_speed"/>
	  			<TextView 
	  				android:id="@+id/top_speed"/>
	  		</TableRow>
	  	</TableLayout>
  		<TableLayout
  			android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
	  		android:stretchColumns="1">
	  		 <View
        		android:layout_height="2dip"
        		android:background="#FF909090" />
	  		<TableRow>
	  		<View
        		android:layout_height="2dip"
        		android:background="#FF909090" />
		  		<Button 
	  				android:id="@+id/delete_track"
	  				android:text="@string/delete_route"/>
	  				<!-- android:layout_column="1"/>
	  			<Button 
	  				android:id="@+id/rename_track"
	  				android:text="Rename route"/>	-->
	  		</TableRow>
  		</TableLayout>
       		<!-- <TableRow>
  				<CheckBox 
  					android:layout_column="1"
  					android:id="@+id/draw_additional_route"
  					android:text="@string/track_draw_aditional_route"/>
	  			<TextView 
	  				android:id="@+id/top_speed"/>
	  		</TableRow> -->
	</LinearLayout>
</ScrollView>